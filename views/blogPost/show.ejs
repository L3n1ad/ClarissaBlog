<% include ../partials/header %>

<div class="ui stackable grid container">
  <div class="ui four wide column">
    <div class="ui">
      <div id="mapid">
        <script>
          var mymap = L.map('mapid').setView([<%= blog.lat %>, <%= blog.lng %>], 13);
          L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token={accessToken}', {
            attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
            maxZoom: 18,
            id:"mapbox.satellite",
            accessToken: 'pk.eyJ1IjoibDNuMWFkIiwiYSI6ImNqemNsb2w3bjA2dGgzZ21ndmtqeXJlMDQifQ.jJsl02UJ5r2Rcmv5n8mLyw'
          }).addTo(mymap);
          var marker = L.marker([<%= blog.lat %>, <%= blog.lng %>]).addTo(mymap);
          marker.bindPopup("<b>Restaurant Name</b>").openPopup();
        </script>
      </div>
    </div>
  </div>

  <div class="twelve wide column">
    <div class="ui main text container segment">
        <div class="ui huge header"><%=blog.title%></div>
        <div class="ui top attached">
            <div class="item">
              <div class="slider">
                <div><img class="ui centered image"src="http://localhost:3001/<%=blog.blogImage1%>"></div>
                <div><img class="ui centered image"src="http://localhost:3001/<%=blog.blogImage2%>"></div>
                <div><img class="ui centered image"src="http://localhost:3001/<%=blog.blogImage3%>"></div>
                <div><img class="ui centered image"src="http://localhost:3001/<%=blog.blogImage4%>"></div>
                <div><img class="ui centered image"src="http://localhost:3001/<%=blog.blogImage5%>"></div>
              </div>

            </div>
            <div class="content">
                <span><%= moment(blog.created).fromNow() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <% if(!currentUser){ %>
            <% } else { %>
              <% if(currentUser.isAdmin){ %>
                <a class="ui black button" href="/blogs/<%= blog._id %>/edit">Edit</a>
                <form id="delete" action="/blogs/<%=blog._id %>?_method=DELETE" method="POST">
                    <button class="ui black button">Delete</button>
                </form>
              <% } if(currentUser){ %>
                <div class="ui star rating" data-rating="3"></div>
              <% } %>
            <% } %>
        </div>

    </div>

    <div class="ui main text container segment">
        <% blog.comments.forEach(function(comment){ %>
        <div class="ui comments">
          <div class="comment">
            <div class="content" name="content">
              <a class="author"><%= comment.author.username %></a>
              <div class="metadata">
                <div class="date"><%= moment(comment.created).fromNow() %></div>
              </div>

            </div>
            <form action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
              <div class="text">
                <input name="comment[text]" type="text" value="<%= comment.text %>"></input>
              </div>
              <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
              <input type="submit" class="ui yellow button" value="Edit">
            </form>
            <form action="/blogs/<%= blog._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST">
              <input type="submit" class="ui red button" value="Delete">
            </form>
            <% } %>
          </div>
        </div>
        <% }) %>

        <form class="ui reply form" action="/blogs/<%= blog._id %>/comments" method="POST">
        <div class="field">
          <textarea required name="comment[text]" placeholder="Add new comment"></textarea>
        </div>
        <button class="ui small blue labeled submit icon button">
          <i class="icon comment alternate outline"></i> Submit comment
        </button>
      </form>
    </div>
  </div>

  <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
  <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
  <script type="text/javascript" src="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick.min.js"></script>

  <script type="text/javascript">
    $(document).ready(function(){
      $('.slider').slick({
        dots:true,
        arrows: true,
        autoplay:true,
        autplaySpeed:20,
        adaptiveHeight: true,
        respondTo: "window",
        variableWidth: false,
      });
      $('.slider').slick({
    // @type {string} html
        nextArrow: '<button class="ui button">Next</button>',
        prevArrow: '<button class="any-class-name-you-want-previous">Previous</button>'
      });
    });
  </script>
<% include ../partials/footer %>
