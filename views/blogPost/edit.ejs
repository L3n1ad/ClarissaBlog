<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input required type="text" name="blog[title]" value="<%= blog.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input  required type="text" name="blog[image]" value="<%= blog.image%>">
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="location" id="location" value="<%= blog.location %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea id="whats-new"  name="blog[body]"><%= blog.body %></textarea>
        </div>
